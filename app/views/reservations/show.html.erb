<div class="Reservation">
  <div class="ReservationCard">
    <div class="ReservationCard-header ReservationCard-indention-top">
      <div class="ReservationCard-passengers">
        <div class="ReservationCard-label">Passengers</div>
        <% @reservation.passengers.each do |passenger| %>
          <div class="ReservationCard-passenger">
            <%= passenger.full_name %>
          </div>
        <% end %>
      </div>
      <div class="ReservationCard-confirmation-number-group">
        <div class="ReservationCard-label">Confirmation #</div>
        <div class="ReservationCard-confirmation-number"><%= @reservation.confirmation_number %></div>
      </div>
    </div>
    <div class="ReservationCard-flights ReservationCard-indention-bottom">
      <% @reservation.flights.each do |flight| %>
        <div class="ReservationCard-flight">
          <div class="ReservationCard-flight-title">
            <%= flight.departure_airport.iata %>
            <span class="Icon-plane-arrow Icon--large Icon--padded light"></span>
            <%= flight.arrival_airport.iata %> <span class='u-text-padded'>Â·</span> <%= flight_date flight.local_departure_time %>
          </div>
          <div class="ReservationCard-flight-times">
            <div class="ReservationCard-flight-times-depart">Departs <%= flight_time flight.local_departure_time %></div>
            <div class="ReservationCard-flight-times-arrive">Arrives <%= flight_time flight.local_arrival_time %></div>
          </div>
          <% if flight.flight_checkins.any? %>
            <div class="ReservationCard-flight-checkins">
              <% flight.flight_checkins.each do |flight_checkin| %>
                <div class="ReservationCard-flight-checkin">
                  <span class="Icon-checkmark Icon--tiny Icon--padded-right"></span> <%= flight_checkin.passenger.full_name %> checked in at <%= flight_checkin.boarding_group %><%= flight_checkin.boarding_position %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_reservation_path(@reservation) %> |
<%= link_to 'Back', reservations_path %>
